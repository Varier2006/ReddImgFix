{
  "manifest_version": 2,
  "name": "RedditImageFix",
  "version": "1.4",
  "description": "Forces all opened Reddit images to be PNG and not WebP",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["reddimgfix.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "reddimgfix@varier.com"
    }
  }
}
